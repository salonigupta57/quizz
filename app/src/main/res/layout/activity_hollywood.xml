<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to HOLLYWOOD QUIZ"
            android:textSize="27sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q1:\t\ In which film did Anthony Hopkins play the role of Hannibal Lecter?"
            android:textSize="24sp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/Q1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Elephant Man"
                android:paddingLeft="16dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>
            <RadioButton
                android:id="@+id/Q1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The World's Fastest Indian"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q1D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Silence Of Lambs"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q2:\t\tWho played the starring role in 'Last of the Mohicans'?"
            android:layout_marginTop="24dp"
            android:textSize="24sp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/Q2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daniel Day-Lewis "
                android:paddingLeft="16dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>
            <RadioButton
                android:id="@+id/Q2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madeleine Stowe"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q2C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Russell Means"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q2D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eric Schweig"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:text="Q3:\t\Which famous hollywood star used to be a circus acrobat?"
            android:textSize="24sp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
            android:id="@+id/Q3A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bruce Willis"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
            <RadioButton
                android:id="@+id/Q3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sophia Loren"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q3C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David Niven"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burt Lancester"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q4:\t\tIn which movie did sean connery sing  Pretty Irish Girl?"
            android:textSize="24sp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/Q4A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Darby O Gill and the Little People "
                android:paddingLeft="16dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>
            <RadioButton
                android:id="@+id/Q4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peter and the Wolf"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q4C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Young Person's Guide to the Orchestra: Brass"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q4D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None Of These"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q5:\t\tIn the movie STAR WARS, What is the emperors last name?"
            android:textSize="24sp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/Q5A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maul"
                android:paddingLeft="16dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>
            <RadioButton
                android:id="@+id/Q5B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amidala"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q5C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palpatine"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Q5D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SkyWalker"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
        </RadioGroup>
        <Button
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="finish"
            android:onClick="result2"/>
    </LinearLayout>
</ScrollView>